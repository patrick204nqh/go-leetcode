{
  "editor.formatOnSave": true,
  "[go]": {
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
          "source.organizeImports": true
      }
  },
  "go.formatTool": "gofmt",
  "go.useLanguageServer": true,
  "gopls": {
      "usePlaceholders": true,
      "completeUnimported": true,
      "staticcheck": true,
      "analyses": {
          "unusedparams": true
      }
  }
}